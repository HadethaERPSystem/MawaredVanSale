<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
    <data>
        <variable
                name="viewmodel"
                type="com.mawared.mawaredvansale.controller.transfer.transferlist.TransferViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/transfer_list_lc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".controller.transfer.transferlist.TransferFragment">

        <include
            android:id="@+id/progress_bar_transfer"
            android:visibility="gone"
            layout="@layout/layout_progress_bar_with_text"
            />

        <TextView
            android:id="@+id/txt_error_transfer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/lbl_error"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_transfer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/transfer_row" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>