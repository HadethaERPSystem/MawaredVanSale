<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
    <data>
        <variable
                name="viewmodel"
                type="com.mawared.mawaredvansale.controller.transfer.transferlist.TransferViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/transfer_list_lc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".controller.transfer.transferlist.TransferFragment">

        <include
            android:id="@+id/progress_bar"
            android:visibility="gone"
            layout="@layout/layout_progress_bar_with_text"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/ll_error">

            <TextView
                android:id="@+id/txt_error_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:fontFamily="@font/droid_kufi_bold"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:text="@{viewmodel.errorMessage}"
                android:hint="@string/lbl_error"
                android:visibility="visible"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_reload"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_gray"
                android:fontFamily="@font/droid_kufi_regular"
                android:padding="0dp"
                android:text="@string/btn_reload"
                android:textAllCaps="false"
                android:textColor="@drawable/white"
                android:textSize="13sp"
                android:visibility="visible"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/pullToRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_transfer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/transfer_row" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>


</layout>