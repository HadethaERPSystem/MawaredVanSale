<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="entityEo"
                type="com.mawared.mawaredvansale.data.db.entities.fms.Payable"/>
        <variable
                name="viewmodel"
                type="com.mawared.mawaredvansale.controller.fms.payables.payablelist.PayableViewModel" />
    </data>
    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardMaxElevation="6dp"
            app:contentPadding="5dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_margin="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:minHeight="?listPreferredItemHeightLarge">

            <!-- Invoice no label and data-->
            <TextView
                    android:id="@+id/lbl_refNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="2dp"
                    android:gravity="start"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:hint="@string/lbl_doc_no"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline13"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SmallSp" />

            <TextView
                    android:id="@+id/txtv_doc_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="2dp"
                    android:gravity="start"
                    android:padding="5dp"
                    android:text="@{String.valueOf(entityEo.py_ref_no)}"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/guideline13"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_refNo"
                    tools:text="PYB-V001-2019-0000001" />

            <!-- Invoice date label and data-->

            <TextView
                    android:id="@+id/lbl_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:gravity="start"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="@string/lbl_doc_date"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guideline13"
                    app:layout_constraintTop_toTopOf="@+id/lbl_refNo"
                    tools:ignore="SmallSp" />

            <TextView
                    android:id="@+id/txtv_doc_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:gravity="start"
                    android:padding="5dp"
                    android:text="@{viewmodel.returnDateString(entityEo.py_doc_date)}"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guideline13"
                    app:layout_constraintTop_toTopOf="@+id/txtv_doc_no"
                    tools:text="2019-09-08" />

            <TextView
                    android:id="@+id/lbl_customer_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="2dp"
                    android:gravity="start"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text="@string/lbl_customer_name"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtv_doc_no"
                    tools:ignore="SmallSp" />

            <TextView
                    android:id="@+id/txtv_customer_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginTop="4dp"
                    android:gravity="start"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:text="@{entityEo.py_cu_name}"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_customer_name"
                    tools:ignore="SmallSp" />

            <TextView
                    android:id="@+id/lbl_amount_usd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:gravity="start"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:text="@string/lbl_paid_amount_usd"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline13"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtv_customer_name"
                    tools:ignore="SmallSp" />

            <TextView
                    android:id="@+id/txtv_amount_usd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:gravity="start"
                    android:text="@{String.valueOf(entityEo.py_amount)}"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/guideline13"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_amount_usd"
                    tools:ignore="SmallSp" />

            <TextView
                    android:id="@+id/lbl_amount_iqd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:gravity="start"
                    android:text="@string/lbl_paid_amount_lc"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guideline13"
                    app:layout_constraintTop_toTopOf="@+id/lbl_amount_usd" />

            <!-- Amount label -->

            <TextView
                    android:id="@+id/txtv_amount_iqd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:gravity="start"
                    android:text="@{String.valueOf(entityEo.py_lc_amount)}"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guideline13"
                    app:layout_constraintTop_toTopOf="@+id/txtv_amount_usd" />

            <TextView
                    android:id="@+id/lbl_change_usd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="2dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:gravity="start"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:text="@string/lbl_change_amount_usd"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline13"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtv_amount_usd"
                    tools:ignore="SmallSp" />

            <TextView
                    android:id="@+id/txtv_change_usd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:gravity="start"
                    android:text="@{String.valueOf(entityEo.py_change)}"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/guideline13"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_change_usd"
                    tools:ignore="SmallSp" />

            <TextView
                    android:id="@+id/lbl_change_iqd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:gravity="start"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:text="@string/lbl_change_amount_lc"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guideline13"
                    app:layout_constraintTop_toTopOf="@+id/lbl_change_usd" />

            <!-- Buttons for view, edit & delete -->

            <TextView
                    android:id="@+id/txtv_change_iqd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:gravity="start"
                    android:text="@{String.valueOf(entityEo.py_lc_change)}"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guideline13"
                    app:layout_constraintTop_toTopOf="@+id/txtv_change_usd" />

            <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/colorPrimaryDark"
                    app:layout_constraintTop_toBottomOf="@+id/txtv_change_usd"
                    tools:layout_editor_absoluteX="6dp" />

            <ImageButton
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="4dp"
                    android:background="@null"
                    android:onClick="@{()-> viewmodel.onItemDelete(entityEo)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view"
                    app:srcCompat="@drawable/ic_delete"
                    android:contentDescription="@string/btn_delete_caption"/>

            <ImageButton
                    android:id="@+id/btn_edit"
                    android:onClick="@{()-> viewmodel.onItemEdit(entityEo)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:background="@null"
                    app:layout_constraintEnd_toStartOf="@+id/btn_delete"
                    app:layout_constraintTop_toTopOf="@+id/btn_delete"
                    app:srcCompat="@drawable/ic_edit"
                    android:contentDescription="@string/btn_edit_caption"/>

            <ImageButton
                    android:id="@+id/btn_view"
                    android:onClick="@{()-> viewmodel.onItemView(entityEo)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:background="@null"
                    app:layout_constraintEnd_toStartOf="@+id/btn_edit"
                    app:layout_constraintTop_toTopOf="@+id/btn_edit"
                    app:srcCompat="@drawable/ic_view"
                    android:contentDescription="@string/btn_view_caption"/>

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</layout>