<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
    <data>
        <variable
                name="viewmodel"
                type="com.mawared.mawaredvansale.controller.fms.receivables.receivablelist.ReceivableViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/receivable_list_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".controller.fms.payables.payablelist.ReceivableFragment">

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/receivable_row"
                android:id="@+id/rcv_receivable"/>

        <include
            android:id="@+id/progress_bar_receivable"
            android:visibility="gone"
            layout="@layout/layout_progress_bar_with_text"
            />

        <TextView
            android:id="@+id/txt_error_receivable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/lbl_error"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>