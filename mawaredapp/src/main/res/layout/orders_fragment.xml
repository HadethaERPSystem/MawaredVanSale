<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewmodel"
                type="com.mawared.mawaredvansale.controller.sales.order.orderslist.OrdersViewModel" />
    </data>

    <LinearLayout
            android:id="@+id/order_list_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".controller.sales.order.orderslist.OrdersFragment">

        <ProgressBar
            android:id="@+id/progress_bar_order"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_error_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/lbl_error"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/order_row"
                android:scrollbars="vertical"
                android:id="@+id/rcv_orders"/>

<!--        <include-->
<!--            android:id="@+id/llProgressBar"-->
<!--            android:visibility="visible"-->
<!--            layout="@layout/layout_progress_bar_with_text"-->
<!--            />-->
    </LinearLayout>
</layout>