<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
    <data>
        <variable
                name="viewmodel"
                type="com.mawared.mawaredvansale.controller.sales.salereturn.salereturnlist.SaleReturnViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sale_return_list_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".controller.sales.salereturn.salereturnlist.SaleReturnFragment">

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/sale_return_row"
                android:id="@+id/rcv_sale_return"/>

        <include
            android:id="@+id/progress_bar_return"
            android:visibility="gone"
            layout="@layout/layout_progress_bar_with_text"
            />

        <TextView
            android:id="@+id/txt_error_return"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/lbl_error"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>