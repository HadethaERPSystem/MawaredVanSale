<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="entityEo"
                type="com.mawared.mawaredvansale.data.db.entities.inventory.Stockout"/>
        <variable
                name="viewmodel"
                type="com.mawared.mawaredvansale.controller.inventory.stockout.stockoutlist.StockOutViewModel" />
    </data>
    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardMaxElevation="6dp"
            app:contentPadding="5dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_margin="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:minHeight="?listPreferredItemHeightLarge">

            <!-- Invoice no label and data-->
            <TextView
                    android:id="@+id/lbl_refNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:hint="@string/lbl_doc_no"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:textSize="9sp"
                    tools:ignore="SmallSp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            <TextView
                    android:id="@+id/txtv_doc_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{entityEo.sot_doc_no}"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/lbl_refNo"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_refNo"
                    tools:text="SAL-V001-2019-0000001" />

            <!-- Invoice date label and data-->
            <TextView
                    android:id="@+id/lbl_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/lbl_doc_date"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:textSize="9sp"
                    tools:ignore="SmallSp"
                    app:layout_constraintEnd_toStartOf="@+id/txtv_doc_no"
                    app:layout_constraintTop_toTopOf="parent" />
            <TextView
                    android:id="@+id/txtv_doc_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{entityEo.sot_doc_date}"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/lbl_date"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_date"
                    tools:text="2019-09-08" />

            <!-- items number label and data-->
            <TextView
                    android:id="@+id/lbl_itemsno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="68dp"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:text="@string/lbl_count_items"
                    android:textSize="9sp"
                    tools:ignore="SmallSp"
                    app:layout_constraintEnd_toStartOf="@+id/lbl_date"
                    app:layout_constraintTop_toTopOf="parent" />
            <TextView
                    android:id="@+id/txtv_itemsno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{entityEo.sot_itemsno}"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/lbl_itemsno"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_itemsno"
                    tools:text="10" />
            <!-- Inventory Status label and data-->
            <TextView
                    android:id="@+id/lbl_status_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:layout_marginTop="4dp"
                    android:text="نوع الادخال"
                    android:textSize="9sp"
                    tools:ignore="SmallSp"
                    app:layout_constraintEnd_toEndOf="@+id/txtv_doc_no"
                    app:layout_constraintTop_toBottomOf="@+id/txtv_doc_no" />
            <TextView
                    android:id="@+id/txtv_status_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{entityEo.sot_inv_status}"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:textSize="10sp"
                    tools:ignore="SmallSp"
                    app:layout_constraintEnd_toEndOf="@+id/lbl_status_name"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_status_name" />

            <!-- Invoice no label and data-->
            <TextView
                    android:id="@+id/lbl_refno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="الرقم المرجعي"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:textSize="9sp"
                    tools:ignore="SmallSp"
                    app:layout_constraintEnd_toEndOf="@+id/txtv_doc_date"
                    app:layout_constraintTop_toBottomOf="@+id/txtv_doc_date" />
            <TextView
                    android:id="@+id/txtv_refno_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{entityEo.sot_entry_refno}"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:textSize="10sp"
                    tools:ignore="SmallSp"
                    app:layout_constraintEnd_toEndOf="@+id/lbl_refno"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_refno" />

            <!-- Warehouse label -->
            <TextView
                    android:id="@+id/lbl_warehouse_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="المخزن"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:textSize="9sp"
                    tools:ignore="SmallSp"
                    app:layout_constraintEnd_toEndOf="@+id/txtv_status_name"
                    app:layout_constraintTop_toBottomOf="@+id/txtv_status_name"/>
            <TextView
                    android:id="@+id/txtv_customer_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{entityEo.sot_warehouse_name}"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/droid_kufi_regular"
                    android:textSize="10sp"
                    tools:ignore="SmallSp"
                    app:layout_constraintEnd_toEndOf="@+id/lbl_warehouse_name"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_warehouse_name"
                    />
            <!-- Buttons for view, edit & delete -->

            <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/colorPrimaryDark"
                    app:layout_constraintTop_toBottomOf="@+id/txtv_customer_name"
                    tools:layout_editor_absoluteX="0dp" />

            <ImageButton
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="4dp"
                    android:background="@null"
                    android:onClick="@{()-> viewmodel.onItemDelete(entityEo)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view"
                    app:srcCompat="@drawable/ic_action_delete"
                    android:contentDescription="@string/btn_delete_caption"/>

            <ImageButton
                    android:id="@+id/btn_edit"
                    android:onClick="@{()-> viewmodel.onItemEdit(entityEo)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:background="@null"
                    app:layout_constraintEnd_toStartOf="@+id/btn_delete"
                    app:layout_constraintTop_toTopOf="@+id/btn_delete"
                    app:srcCompat="@drawable/ic_action_edit"
                    android:contentDescription="@string/btn_edit_caption"/>

            <ImageButton
                    android:id="@+id/btn_view"
                    android:onClick="@{()-> viewmodel.onItemView(entityEo)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:background="@null"
                    app:layout_constraintEnd_toStartOf="@+id/btn_edit"
                    app:layout_constraintTop_toTopOf="@+id/btn_edit"
                    app:srcCompat="@drawable/ic_view"
                    android:contentDescription="@string/btn_view_caption"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>